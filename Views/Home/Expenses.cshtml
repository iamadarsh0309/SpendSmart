@{
    ViewData["Title"] = "Expenses";       // used to give the title 
}
@model List<Expense>


<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br />
    <br />
    <hr />
    <h3>Total Expenses $@ViewBag.Expenses</h3>
    <table class="table">
      <thead>
          <tr>
               <th>
                  ID
               </th>
                <th>
                    Value
                </th>
                <th>
                    Description
                </th>
          </tr>
      </thead>
      <tbody>
          @{
              foreach (var expense in Model)
                {
                    <tr>
                    <td>
                    @expense.Id
                    </td>
                    <td>
                    @expense.Value
                    </td>
                        <td>
                            @expense.Description
                        </td>
                    <td>
                    <a asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a>
                            <a asp-action="DeleteExpense" asp-route-id="@expense.Id">delete</a>
                    </td>
                    </tr>
                }
          }
      </tbody>
</table>

    
</div>

